@model DiscussionPlatform.Models.ApplicationUser.ProfileListModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">Просмотр пользователей</div>
    </div>
    <div class="row" id="platformIndexContent">
        <table class="table table-hover" id="userIndexTable">
            <thead>
                <tr>
                    <th>
                        Картинка
                    </th>
                    <th>
                        Имя
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        С
                    </th>
                    <th>
                        Рейтинг
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var profile in Model.Profiles)
                {
                    <tr class="userRow">
                        <td>
                            <div class="userProfilePic" style="background-image: url(@profile.ProfileImageUrl); background-size:100%"></div>
                        </td>
                        <td>
                            @profile.UserName
                        </td>
                        <td>
                            @profile.Email
                        </td>
                        <td>
                            @profile.PartnerSince
                        </td>
                        <td>
                            @profile.UserRating
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>