@model DiscussionPlatform.Models.Platform.AddPlatformModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Создать новый форум
        </div>
    </div>
    <div class="row">
        <div id="createPlatformSection">
            <form asp-action="AddPlatform" method="post" id="createPlatformForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Название</label>
                    <input asp-for="Title" class="form-control" placeholder="Выберите название" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Описание</label>
                    <input asp-for="Description" class="form-control" placeholder="Напишите краткое описание темы" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Обновить картинку</label>
                    <br />
                    <label class="btn btn-default btn-file">
                        Просмотреть <input asp-for="ImageUpload" typeof="file" style="display: none" />
                    </label>
                </div>
                <button type="submit" id="newFormBtn" class="btn btn-submitMail">Создать форум</button>
            </form>
        </div>
    </div>
</div>